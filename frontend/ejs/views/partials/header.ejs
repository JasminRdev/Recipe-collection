<body>
    <header id="header">
        <section id="mainHeader" class="mainHeader">
            <h1 class="headerTitle">Jasmin's recipe collection</h1>
            <nav>
                <ul>
                    <li><a href="about" id="about">About</a></li>
                    <li><a href="login" id="login">Login</a></li>
                </ul>
            </nav>
        </section>
        <section id="secondaryHeader" class="secondaryHeader">
            <form id="searchRecipes" class="searchRecipes" >
                <a class="searchAll" id="allRecipesShow">Show all Recipes</a>
                <input class="inputSearchField" placeholder="Search for Recipes"/>
                <select class="categoriesSearchField" name="categories" id="category-select">
                    <option value="All categories">All categories</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                    <option value="Snack">Snack</option>
                </select>
                <button type="submit" class="submitRecipeSearch">Submit</button>
            </form>
            <nav>
                <li><i class="fas fa-plus"></i><a href="addRecipe" id="addRecipe"> Add Recipe</a></li>
            </nav>
                       
        </section>
        
